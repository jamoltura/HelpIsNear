<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="titleTextColor">@color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="myToolbarTheme">
        <item name="colorControlNormal">#FF0000</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="CallDialog" parent="Theme.MaterialComponents.Light.Dialog.Bridge">
        <item name="colorPrimary">@color/color_btn_dialog</item>
    </style>

    <style name="buttonsimplebase" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="buttonnormal" parent="buttonsimplebase">
        <item name="android:background">@drawable/btnsimple</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="buttonlangnormal" parent="buttonnormal">
        <item name="android:layout_width">@dimen/btn_lang</item>
        <item name="android:layout_height">@dimen/btn_lang</item>
    </style>

    <style name="button_yes_no" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">@dimen/btn_width</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="normal_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="test_text_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
</resources>